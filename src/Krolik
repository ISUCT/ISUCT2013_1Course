                } else {
                        System.out.println("Иван Хочет кушать");
                }

                if (Ivan.move("y", 100)) {
                        System.out.println("Иван Новые координаты теперь х= "
                                        + Ivan.getCoords()[0] + " y= " + Ivan.getCoords()[1]);
                } else {
                        System.out.println("Иван Хочет кушать");
                }
        }

